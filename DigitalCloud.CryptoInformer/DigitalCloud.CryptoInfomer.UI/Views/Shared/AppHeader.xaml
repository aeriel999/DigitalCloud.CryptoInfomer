<UserControl x:Class="DigitalCloud.CryptoInfomer.UI.Views.Shared.AppHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <UserControl.Resources>
        <!-- Switch style -->
        <Style x:Key="SwitchToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="#E5E5E5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <!-- track -->
                            <Border x:Name="Track"
                         CornerRadius="14"
                         Background="{TemplateBinding Background}"/>
                            <!-- circle -->
                            <Border x:Name="Thumb"
                         Width="15" Height="15"
                         CornerRadius="10"
                         Background="White"
                         Margin="2"
                         HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#4BA3E3"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Track" Property="Opacity" Value="0.4"/>
                                <Setter TargetName="Thumb" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!--Menu-->
            <Menu HorizontalAlignment="Left" VerticalAlignment="Center">
                <MenuItem Header="Home">
                </MenuItem>
                <MenuItem Header="Exchanges">
                </MenuItem>
                <MenuItem Header="About">
                </MenuItem>
            </Menu>
            <!--Logo-->
            <Image Grid.Column="1" 
			Source="/Assets/Images/logo_4.png"
			Height="auto"
			MinHeight="20"
			Margin="0, 15, 0, 15"
			VerticalAlignment="Center"
			HorizontalAlignment="Center"/>
            <!--Additional Block-->
            <Grid Grid.Column="2" 
			  HorizontalAlignment="Right" 
			  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!--Search-->
                <Grid HorizontalAlignment="Right" Margin="0,0,15,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!--<TextBox />-->
                    <TextBlock  
							VerticalAlignment="Center"
							FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
							Text="&#xE721;"/>
                </Grid>
                <!--Localization-->
                <ComboBox Width="auto" 
					  Grid.Column="1"
					  HorizontalAlignment="Left" 
					  SelectedIndex="0"
					  Margin="10">
                    <ComboBoxItem Content="EN" />
                    <ComboBoxItem Content="UA" />
                </ComboBox>
                <!--Theme switcher-->
                <ToggleButton Style="{StaticResource SwitchToggleStyle}"
                       Grid.Column="2"
						  x:Name="ThemeSwitch"
						  Margin="8"
						  Click="ThemeSwitch_Click"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
