<UserControl x:Class="DigitalCloud.CryptoInfomer.UI.Views.Shared.AppHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Switch style -->
        <Style x:Key="SwitchToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="#E5E5E5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <!-- track -->
                            <Border x:Name="Track"
                                     CornerRadius="14"
                                     Background="{TemplateBinding Background}"/>
                            <!-- circle -->
                            <Border x:Name="Thumb"
                                     Width="15" Height="15"
                                     CornerRadius="10"
                                     Background="White"
                                     Margin="2"
                                     HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#4BA3E3"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Track" Property="Opacity" Value="0.4"/>
                                <Setter TargetName="Thumb" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--Menu-->
        <Menu Grid.Column="0"
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Center">
            <MenuItem Header="Home"     Command="{Binding GoToCoinsListCommand}"   Cursor="Hand"/>
            <MenuItem Header="Converter" Command="{Binding GoToConverterCommand}"   Cursor="Hand"/>
            <MenuItem Header="Search" Command="{Binding GoToCoinSearchCommand}"/>


        </Menu>

        <!--Logo-->
        <Image Grid.Column="1" 
			    Source="/Assets/Images/logo_4.png"
                MaxHeight="100"
			    MinHeight="20"
			    Margin="0, 15, 0, 15"
			    VerticalAlignment="Center"
			    HorizontalAlignment="Center"/>

        <!--Additional Block-->
        <Grid Grid.Column="2" 
			      HorizontalAlignment="Right" 
			      VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--Search-->
            <Button Grid.Column="0" Margin="0,0,15,0"
                    Command="{Binding GoToCoinSearchCommand}"
                    ToolTip="Search"
                    Background="Transparent" BorderThickness="0">
                <TextBlock FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                             Text="&#xE721;" FontSize="16"
                             VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            
            <!--Localization-->
            <ComboBox Grid.Column="1"
					      HorizontalAlignment="Left" 
					      SelectedIndex="0"
					      Margin="10">
                <ComboBoxItem Content="EN" />
                <ComboBoxItem Content="UA" />
            </ComboBox>

            <!--Theme switcher-->
            <ToggleButton Grid.Column="2"
                           Style="{StaticResource SwitchToggleStyle}"
    					   x:Name="ThemeSwitch"
				    	   Margin="8"
					       Click="ThemeSwitch_Click"/>
        </Grid>
    </Grid>
</UserControl>