<Window x:Class="DigitalCloud.CryptoInfomer.UI.Views.Shell.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DigitalCloud.CryptoInfomer.UI.Views.Shared"
		xmlns:local="clr-namespace:DigitalCloud.CryptoInfomer.UI"
		mc:Ignorable="d"
        Style="{StaticResource BaseWindowStyle}"
		Title="DigitalCloud.CryptoInfomer - Main Window" 
		ThemeMode="Light">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
        </Grid.RowDefinitions>
        <!--Header-->
        <views:AppHeader />
        <!-- content -->
        <Frame x:Name="MainFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden" />
    </Grid>
</Window>