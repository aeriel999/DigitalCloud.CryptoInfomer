<Window x:Class="DigitalCloud.CryptoInfomer.UI.Views.Main.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:DigitalCloud.CryptoInfomer.UI"
		mc:Ignorable="d"
		Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
		Title="DigitalCloud.CryptoInfomer" 
        Height="700" 
        MinHeight="500"
        MaxHeight="1000"
        Width="1000" 
        MinWidth="800"
        MaxWidth="1500"
		ThemeMode="Light">
    <Window.Resources>
        <!-- Switch style -->
        <Style x:Key="SwitchToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="#E5E5E5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <!-- track -->
                            <Border x:Name="Track"
                                CornerRadius="14"
                                Background="{TemplateBinding Background}"/>
                            <!-- circle -->
                            <Border x:Name="Thumb"
                                Width="15" Height="15"
                                CornerRadius="10"
                                Background="White"
                                Margin="2"
                                HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#4BA3E3"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Track" Property="Opacity" Value="0.4"/>
                                <Setter TargetName="Thumb" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>

        </Grid.RowDefinitions>
        <!--Header-->
        <Grid VerticalAlignment="Stretch">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"></ColumnDefinition>
				<ColumnDefinition Width="1*"></ColumnDefinition>
				<ColumnDefinition Width="1*"></ColumnDefinition>
			</Grid.ColumnDefinitions>
            <!--Menu-->
			<Menu HorizontalAlignment="Left" VerticalAlignment="Center">
				<MenuItem Header="Home">
				</MenuItem>
				<MenuItem Header="Exchanges">
				</MenuItem>
				<MenuItem Header="About">
				</MenuItem>
			</Menu>
			<!--Logo-->
			<Image Grid.Column="1" 
				Source="/Assets/Images/logo_4.png"
				Height="auto"
				MinHeight="20"
				Margin="0, 15, 0, 15"
				VerticalAlignment="Center"
				HorizontalAlignment="Center"/>
			<!--Additional Block-->
			<Grid Grid.Column="2" 
				  HorizontalAlignment="Right" 
				  VerticalAlignment="Center">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
				</Grid.ColumnDefinitions>
				<!--Search-->
				<Grid HorizontalAlignment="Right" Margin="0,0,15,0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
					</Grid.ColumnDefinitions>
					<!--<TextBox />-->
					<TextBlock  
								VerticalAlignment="Center"
								FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
								Text="&#xE721;"/>           
				</Grid>
                <!--Localization-->
				<ComboBox Width="auto" 
						  Grid.Column="1"
						  HorizontalAlignment="Left" 
						  SelectedIndex="0"
						  Margin="10">
					<ComboBoxItem Content="EN" />
					<ComboBoxItem Content="UA" />
				</ComboBox>
                <!--Theme switcher-->
                <ToggleButton Style="{StaticResource SwitchToggleStyle}"
                              Grid.Column="2"
							  x:Name="ThemeSwitch"
							  Margin="8"
							  Click="ThemeSwitch_Click"/>
            </Grid>
		</Grid>
        <!--Buttons bar -->
		<Grid Grid.Row="1" Height="Auto" 
              VerticalAlignment="Stretch"
              Background="#4BA3E3">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"></ColumnDefinition>
				<ColumnDefinition Width="1*"></ColumnDefinition>
				<ColumnDefinition Width="1*"></ColumnDefinition>
				<ColumnDefinition Width="2*"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<!--<Button Content="Top 10" />-->
            <Button x:Name="Top_10_Button"
                    Content="Top 10" 
                    HorizontalAlignment="Center"
                    Click="Top_10_Button_Click"
                    Command="{Binding LoadFirstPartOfCurrenciesCommand}" />
            <Button x:Name="Top_100_Button"
                    Grid.Column="1" 
                    Content="Top 100"
                    HorizontalAlignment="Center"
                    Click="Top_100_Button_Click"
                    Command="{Binding LoadFirstPartOfCurrenciesCommand}"/>
            <Button x:Name="All_Button"
                    Grid.Column="2" 
                    Content="All" 
                    HorizontalAlignment="Center"
                    Click="All_Button_Click"/>
			<ComboBox Grid.Column="3" 
                      MinWidth="200" 
                      HorizontalAlignment="Center" 
                      SelectedIndex="0">
				<ComboBoxItem Content="All markets" />
				<ComboBoxItem Content="Market 1" />
				<ComboBoxItem Content="Market 2" />
				<ComboBoxItem Content="Market 3" />
			</ComboBox>
		</Grid>
        <!--Main content-->
        <Grid Grid.Row="2"
              HorizontalAlignment="Center"
			  VerticalAlignment="Stretch">
              <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid Grid.Column="1"
                              Background="White"
                              ItemsSource="{Binding Currencies}" 
                              AutoGenerateColumns="False"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              CanUserAddRows="False"
                              GridLinesVisibility="Horizontal"
                              VerticalContentAlignment="Center">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridCell">
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="4,6"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <!-- # -->
                        <DataGridTextColumn Header="#" 
                                            Binding="{Binding MarketCapRank}" 
                                            Width="50"/>
                        <!-- Coin -->
                        <DataGridTemplateColumn Header="Coin" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="8,4">
                                        <!-- Icon -->
                                        <Image Source="{Binding CurrencyIconImageLink}"
                                               Width="32"
                                               Height="32"
                                               Stretch="Uniform"
                                               VerticalAlignment="Center"/>
                                        <!-- Title -->
                                        <StackPanel Margin="8,0,0,0">
                                            <TextBlock Text="{Binding CurrencyName}"
                                                       FontWeight="Bold"
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding CurrencySymbol}"
                                                       FontSize="11"
                                                       Foreground="#808080"
                                                       TextWrapping="NoWrap" />
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!-- Other information -->
                        <DataGridTextColumn Header="Price" Binding="{Binding CurrentPrice}" Width="*"/>
                        <DataGridTextColumn Header="Market Cap" Binding="{Binding MarketCap}" Width="*"/>
                        <DataGridTextColumn Header="Volume (24h)" Binding="{Binding TotalVolume}" Width="*"/>
                        <DataGridTextColumn Header="Change (24h %)" Binding="{Binding PriceChangePercentage24h}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
              </Grid>
        </Grid>
        <!--More Button-->
        <Grid Grid.Row="3">
            <Button x:Name="MoreBtn"
                    Style="{DynamicResource AccentButtonStyle}" 
                    Content="More"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="20"/>
        </Grid>
	</Grid>
</Window>
