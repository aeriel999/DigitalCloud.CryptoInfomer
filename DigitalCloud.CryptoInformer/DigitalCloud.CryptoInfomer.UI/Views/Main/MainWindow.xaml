<Window x:Class="DigitalCloud.CryptoInfomer.UI.Views.Main.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:DigitalCloud.CryptoInfomer.UI"
		mc:Ignorable="d"
		Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
		Title="DigitalCloud.CryptoInfomer" Height="700" Width="1000"
		ThemeMode="Light">
    <Window.Resources>
        <!-- Switch style -->
        <Style x:Key="SwitchToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="#E5E5E5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <!-- трек -->
                            <Border x:Name="Track"
                                CornerRadius="14"
                                Background="{TemplateBinding Background}"/>
                            <!-- кружок -->
                            <Border x:Name="Thumb"
                                Width="15" Height="15"
                                CornerRadius="10"
                                Background="White"
                                Margin="2"
                                HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#4BA3E3"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Track" Property="Opacity" Value="0.4"/>
                                <Setter TargetName="Thumb" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
		<!--Header-->
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="7*"></RowDefinition>
		</Grid.RowDefinitions>
		
		<Grid VerticalAlignment="Stretch">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"></ColumnDefinition>
				<ColumnDefinition Width="1*"></ColumnDefinition>
				<ColumnDefinition Width="1*"></ColumnDefinition>
			</Grid.ColumnDefinitions>

			<Menu HorizontalAlignment="Left" VerticalAlignment="Center">
				<MenuItem Header="Home">
				</MenuItem>
				<MenuItem Header="Exchanges">
				</MenuItem>
				<MenuItem Header="About">
				</MenuItem>
			</Menu>
			
			<Image Grid.Column="1" 
				Source="/Assets/Images/logo_4.png"
				Height="auto"
				MinHeight="20"
				Margin="0, 15, 0, 15"
				VerticalAlignment="Center"
				HorizontalAlignment="Center"/>

			<Grid Grid.Column="2" 
				  HorizontalAlignment="Right" 
				  VerticalAlignment="Center">
				  <Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
				</Grid.ColumnDefinitions>

				<Grid  HorizontalAlignment="Right" Margin="0,0,15,0">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
					</Grid.ColumnDefinitions>
				   
					<!--<TextBox />-->
					<TextBlock  
								VerticalAlignment="Center"
								FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" 
								Text="&#xE721;"/>           
				</Grid>
				
				<ComboBox Width="auto" 
						  Grid.Column="1"
						  HorizontalAlignment="Left" 
						  SelectedIndex="0"
						  Margin="10">
					<ComboBoxItem Content="EN" />
					<ComboBoxItem Content="UA" />
				</ComboBox>

                <!--<TextBlock VerticalAlignment="Center" 
                           Margin="10"
                           Grid.Column="2"
                           FontFamily="{StaticResource SymbolThemeFontFamily}" 
                           Text="&#xE793;"/>-->
                <ToggleButton Style="{StaticResource SwitchToggleStyle}"
                              Grid.Column="2"
							  x:Name="ThemeSwitch"
							  Margin="8"
							  Click="ThemeSwitch_Click"/>
            </Grid>
		</Grid>
	   
		<Grid Grid.Row="1" Height="Auto" 
              VerticalAlignment="Stretch"
              Background="#4BA3E3">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"></ColumnDefinition>
				<ColumnDefinition Width="1*"></ColumnDefinition>
				<ColumnDefinition Width="1*"></ColumnDefinition>
				<ColumnDefinition Width="1*"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<!--<Button Content="Top 10" />-->
            <Button Content="Load" Command="{Binding LoadCurrenciesCommand}" />
            <Button Grid.Column="1" Content="Top 100" />
			<Button Grid.Column="2" Content="All" />
			<ComboBox Grid.Column="3" MinWidth="200" HorizontalAlignment="Left" SelectedIndex="0">
				<ComboBoxItem Content="All markets" />
				<ComboBoxItem Content="Market 1" />
				<ComboBoxItem Content="Market 2" />
				<ComboBoxItem Content="Market 3" />
			</ComboBox>
		</Grid>
	   
		<Grid Grid.Row="2" Height="Auto" VerticalAlignment="Stretch">
            <DataGrid ItemsSource="{Binding Currencies}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding MarketCapRank}" Width="40"/>
                    <DataGridTemplateColumn Header="Coin" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5,0">
                                    <Image Source="{Binding CurrencyIconImageLink}" Width="24" Height="24"/>
                                    <TextBlock Text="{Binding CurrencyName}" FontWeight="Bold" Margin="8,0,0,0"/>
                                    <TextBlock Text="{Binding CurrencySymbol}" Foreground="Gray" Margin="6,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Price" Binding="{Binding CurrentPrice}" Width="100"/>
                    <DataGridTextColumn Header="Market Cap" Binding="{Binding MarketCap}" Width="140"/>
                    <DataGridTextColumn Header="Volume (24h)" Binding="{Binding TotalVolume}" Width="140"/>
                    <DataGridTextColumn Header="Change (24h %)" Binding="{Binding PriceChangePercentage24h}" Width="110"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
	</Grid>
</Window>
