<Window x:Class="DigitalCloud.CryptoInfomer.UI.Views.Main.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DigitalCloud.CryptoInfomer.UI.Views.Shared"
		xmlns:local="clr-namespace:DigitalCloud.CryptoInfomer.UI"
		mc:Ignorable="d"
		Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
		Title="DigitalCloud.CryptoInfomer" 
        Height="750" 
        MinHeight="500"
        MaxHeight="1000"
        Width="1000" 
        MinWidth="800"
        MaxWidth="1500"
		ThemeMode="Light">
    <Window.Resources>
        <!-- Converter for loader-->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>

        </Grid.RowDefinitions>
        <!--Header-->
        <views:AppHeader />
        <!--Buttons bar -->
        <Grid Grid.Row="1" Height="Auto" 
              VerticalAlignment="Stretch"
              Background="#4BA3E3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!--<Button Content="Top 10" />-->
            <Button x:Name="Top_10_Button"
                    Content="Top 10" 
                    HorizontalAlignment="Center"
                    Click="Top_10_Button_Click"
                    Command="{Binding SetTop10ModeCommand}" />
            <Button x:Name="Top_100_Button"
                    Grid.Column="1" 
                    Content="Top 100"
                    HorizontalAlignment="Center"
                    Click="Top_100_Button_Click"
                    Command="{Binding SetTop100ModeCommand}"/>
            <Button x:Name="All_Button"
                    Grid.Column="2" 
                    Content="All" 
                    HorizontalAlignment="Center"
                    Click="All_Button_Click"
                    Command="{Binding SetAllListModeCommand}"/>
            <!--ComboBox With platforms-->
            <ComboBox Grid.Column="3" 
                      MinWidth="200" 
                      HorizontalAlignment="Center" 
                      SelectedIndex="0">
                <ComboBoxItem Content="All markets" />
                <ComboBoxItem Content="Market 1" />
                <ComboBoxItem Content="Market 2" />
                <ComboBoxItem Content="Market 3" />
            </ComboBox>
        </Grid>
        <!--Main content-->
        <Grid Grid.Row="2"
              HorizontalAlignment="Center"
			  VerticalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <DataGrid Grid.Column="1"
                              Background="White"
                              ItemsSource="{Binding Currencies}" 
                              AutoGenerateColumns="False"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              CanUserAddRows="False"
                              GridLinesVisibility="Horizontal"
                              VerticalContentAlignment="Center">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridCell">
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="4,6"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <!-- # -->
                        <DataGridTextColumn Header="#" 
                                            Binding="{Binding MarketCapRank}" 
                                            Width="50"/>
                        <!-- Coin -->
                        <DataGridTemplateColumn Header="Coin" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="8,4">
                                        <!-- Icon -->
                                        <Image Source="{Binding CurrencyIconImageLink}"
                                               Width="32"
                                               Height="32"
                                               Stretch="Uniform"
                                               VerticalAlignment="Center"/>
                                        <!-- Title -->
                                        <StackPanel Margin="8,0,0,0">
                                            <TextBlock Text="{Binding CurrencyName}"
                                                       FontWeight="Bold"
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding CurrencySymbol}"
                                                       FontSize="11"
                                                       Foreground="#808080"
                                                       TextWrapping="NoWrap" />
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!-- Other information -->
                        <DataGridTextColumn Header="Price" Binding="{Binding CurrentPrice}" Width="*"/>
                        <DataGridTextColumn Header="Market Cap" Binding="{Binding MarketCap}" Width="*"/>
                        <DataGridTextColumn Header="Volume (24h)" Binding="{Binding TotalVolume}" Width="*"/>
                        <DataGridTextColumn Header="Change (24h %)" Binding="{Binding PriceChangePercentage24h}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <!--Loader-->
                <Grid Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="#40FFFFFF"
                      Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">   
                    <ProgressBar IsIndeterminate="True"
                         Width="160"
                         Height="4"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"/>
                </Grid>
            </Grid>
        </Grid>
        <!--More Button-->
        <Grid Grid.Row="3">
            <Button x:Name="MoreBtn"
                    Content="More"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding LoadNextPartForCurenciesListCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMoreBtnVisible}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>