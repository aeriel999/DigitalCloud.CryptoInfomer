<Application x:Class="DigitalCloud.CryptoInfomer.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DigitalCloud.CryptoInfomer.UI"
             Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- 🔹 Base style for all Windows -->
            <Style x:Key="BaseWindowStyle" TargetType="Window">
                <Setter Property="Background" Value="{DynamicResource SolidBackgroundFillColorBaseBrush}"/>
                <Setter Property="Height" Value="750"/>
                <Setter Property="MinHeight" Value="500"/>
                <Setter Property="MaxHeight" Value="1000"/>
                <Setter Property="Width" Value="1000"/>
                <Setter Property="MinWidth" Value="800"/>
                <Setter Property="MaxWidth" Value="1500"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
